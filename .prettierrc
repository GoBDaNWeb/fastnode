{
	"printWidth": 100,
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"plugins": [
		"@trivago/prettier-plugin-sort-imports"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrder": [
		"react",
		"redux",
		"<THIRD_PARTY_MODULES>",
		"lodash",
		"swiper",
		"^@api/(.*)$",
		"^@redux/(.*)$",
		"^@app/(.*)$",
		"^@out/(.*)$",
		"^@template/(.*)$",
		"^@contents/(.*)$",
		"^@assets/(.*)$",
		"^@router/(.*)$",
		"^@Pages/(.*)$",
		"^@Widgets/(.*)$",
		"^@Features/(.*)$",
		"^@Entities/(.*)$",
		"^@Shared/(.*)$",
		"^@data/(.*)$",
		"^@extra/(.*)$",
		"^@js/(.*)$",
		"^@hoc/(.*)$",
		"^@hooks/(.*)$",
		"^@locales/(.*)$",
		"^@utils/(.*)$",
		"^@components/(.*)$",
		"^@config",
		"^@package.json",
		"^../(.*)",
		"^./(.*)",
		".scss",
		".css"
	]
}